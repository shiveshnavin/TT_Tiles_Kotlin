<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:transitionName="@string/tran"
    android:layout_width="match_parent"
    android:background="@color/red_500"
    android:layout_height="match_parent"
    tools:context="in.hoptec.kotlin101.Splash">

    <com.daniribalbert.customfontlib.views.CustomFontTextView

        android:layout_below="@+id/img"
        android:layout_centerInParent="true"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/yellow_200"
        app:font="androidnation_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap Tap Tile"
        android:id="@+id/name" />


    <ImageView
        android:src="@drawable/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp" />

    <com.daniribalbert.customfontlib.views.CustomFontTextView


        android:textSize="16sp"
        android:gravity="center"

        android:background="@drawable/tile_pressed"
        android:textColor="@color/yellow_300"
        app:font="avenir-next-regular"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Powered By : Kotlin\nS Navin"
        android:id="@+id/name2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
