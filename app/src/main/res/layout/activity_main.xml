<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_400"
    tools:context="in.hoptec.kotlin101.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"

        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:padding="7dp"
                android:src="@drawable/ic_favorite_white_36dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


            <com.daniribalbert.customfontlib.views.CustomFontTextView

                android:gravity="center"
                android:textSize="23sp"
                android:textColor="@color/white"
                app:font="arcade"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/life"   />


        </LinearLayout>


    </android.support.v7.widget.Toolbar>


    <com.daniribalbert.customfontlib.views.CustomFontTextView
        android:textSize="40sp"

        android:gravity="center"
        android:textColor="@color/yellow_200"
        app:font="androidnation_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />



    <com.daniribalbert.customfontlib.views.CustomFontTextView

        android:gravity="center"
        android:textSize="15sp"
        app:font="arcade"
        android:layout_marginTop="5dp"
        android:textColor="@color/yellow_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered By : Kotlin"
        android:id="@+id/kotlin"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true" />



    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/gameover"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_below="@+id/kotlin"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.daniribalbert.customfontlib.views.CustomFontTextView

            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/grey_300"
            app:font="androidnation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            android:id="@+id/over"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp" />

        <com.daniribalbert.customfontlib.views.CustomFontTextView

            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/grey_400"
            app:font="arcade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score : 0"
            android:id="@+id/finals"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:src="@drawable/ic_cached_white_48dp"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/rounded_selector"
            android:id="@+id/restart"
            android:text="RESTART"
            android:layout_width="200dp"
            android:layout_height="60dp" />


        <ImageView
            android:src="@drawable/lit"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/rounded_selector2"
            android:id="@+id/lit"
            android:text="RESTART"
            android:layout_width="200dp"
            android:layout_height="60dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/tiles"
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_below="@+id/kotlin"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">




    </LinearLayout>

    <com.daniribalbert.customfontlib.views.CustomFontTextView

        android:gravity="center"
        android:textSize="23sp"
        android:textColor="@color/yellow_200"
        app:font="arcade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hits : 0"
        android:id="@+id/score"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

</RelativeLayout>
