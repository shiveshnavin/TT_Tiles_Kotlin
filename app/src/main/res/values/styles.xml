<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <!-- Customize your theme here. -->

        <item name="background">@color/black</item>

        <item name="colorAccent">@color/black</item>


    </style>





    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="FullScreen"    parent="Theme.AppCompat.NoActionBar">


    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#4dd0e1</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#388e3c</item>
        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>

    </style>


    <style name="MyTitleTextStyle">
        <item name="android:textColor">#448aff</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>


</resources>
